<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="TrabajoParcial"
		transaction-type="JTA">
		<jta-data-source>java:/MySqlDS</jta-data-source>

		<class>pe.edu.upc.entity.Usuario</class>
		<class>pe.edu.upc.entity.Auditoria</class>
		<class>pe.edu.upc.entity.Auditor</class>
		<class>pe.edu.upc.entity.Especialidad</class>
		<class>pe.edu.upc.entity.Empleado</class>
		<class>pe.edu.upc.entity.Sede</class>
		<class>pe.edu.upc.entity.Sala</class>
		<class>pe.edu.upc.entity.Herramienta</class>
		<class>pe.edu.upc.entity.FirmaConsultora</class>
		<class>pe.edu.upc.entity.EmpleadoxAuditoria</class>
		<class>pe.edu.upc.entity.UsuarioR</class>
		<class>pe.edu.upc.entity.TipoUsuario</class>
		<class>pe.edu.upc.entity.DetalleDeAuditoria</class>
		<properties>
			<property
				name="javax.persistence.schema-generation.database.action"
				value="update" />
		</properties>
	</persistence-unit>
</persistence>
